datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
}
 
model User {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  name              String?
  email             String?         @unique
  password          String?
  image             String?
  bookmarks         Bookmark[]
  bookmarkShows     BookmarkShows[]
}
 
 
model Bookmark {
  userId          String @id @default(auto()) @map("_id") @db.ObjectId
  title           String?
  poster_path     String?
  id              Int?
  imdbID          String?
  user            User     @relation(fields: [userId], references: [id])
}

 
model BookmarkShows {
  userId          String @id @default(auto()) @map("_id") @db.ObjectId
  name            String?
  poster_path     String?
  id              Int?
  user            User     @relation(fields: [userId], references: [id])
}